<?xml version="1.0"?>

<robot name="microrobot">
    <material name="grey">
        <color rgba="0.749 0.749 0.749 1"/>
    </material>

    <link name="dummy_link">
        <!-- [ WARN] [1647026126.424341897]: The root link platform_link has an 
                inertia specified in the URDF, but KDL does not support a root link with
                an inertia.  As a workaround, you can add an extra dummy link to your 
                URDF.  -->
    </link>
    
    <joint name="dl_to_platform_joint" type="fixed">
        <parent link="dummy_link"/>
        <child link="platform_link"/>
    </joint>

    <link name="platform_link">
        <visual>
            <material name="grey"/>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/platform_collision_mesh_v3.stl" 
                      scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/platform_collision_mesh_v3.stl" 
                      scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <!-- 0.120  -->
            <mass value="0.12002"/>
            <inertia ixx="0.000027589146" 
                    ixy="0.0" ixz="0.0000000000000001775" 
                    iyy="0.000026596997"  
                    iyz="0" 
                    izz="0.000054153556" />
        </inertial>
    </link>

    <link name="left_eccenter_link">
        <visual>
            <material name="grey"/>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/eccenter_collision_mesh_v2.stl" 
                    scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/eccenter_collision_mesh_v2.stl" 
                      scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.000217"/>
            <inertia ixx="0.000000000223" 
                ixy="0.0" ixz="0.0" 
                iyy="0.000000000278"  
                iyz="0.0" 
                izz="0.00000000038" />
        </inertial>
    </link>

    <joint name="left_eccenter_joint" type="continuous">
        <parent link="platform_link"/>
        <child link="left_eccenter_link"/>
        <origin xyz="0 0.028 0.003"/>
        <dynamics damping="1.0" friction="1.0"/>
        <limit effort="1.0" velocity="1.0" />       
        <axis xyz="0 1 0"/>
    </joint> 

    <link name="right_eccenter_link">
        <visual>
        <material name="grey"/>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/eccenter_collision_mesh_v2.stl" 
                    scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <mesh filename="package://microrobot/meshes/colision_mesh/eccenter_collision_mesh_v2.stl" 
                      scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.00021"/>
            <inertia ixx="0.000000000239" 
                ixy="0.0" ixz="0.0" 
                iyy="0.000000000271"  
                iyz="-0.000000000002" 
                izz="0.000000000344" />
        </inertial>
    </link>
    
    <joint name="right_eccenter_joint" type="continuous">
        <parent link="platform_link"/>
        <child link="right_eccenter_link"/>
        <origin xyz="0 -0.028 0.003" rpy="0 0 3.14159265" />
        <dynamics damping="1.0" friction="1.0"/>
        <limit effort="1.0" velocity="1.0" /> 
        <axis xyz="0 1 0"/>
    </joint>
</robot>